{
    "manifest_version": 3,
    "name": "Fact verifier",
    "description": "Provides user interface for fact checking articles",
    "version": "1.0",
    "permissions": [
        "storage", 
        "tabs", 
        "browsingData", 
        "search", 
        "sidePanel",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/"
    ],
    "action": {
        "default_title": "Click to open panel",
        "default_popup": "default_popup.html",
        "default_icon": "random.png"
    },
    "side_panel": {
        "default_path": "side_panel.html"
    },
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}